<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addPoke">

    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Anade"
            style="@style/Widget.MaterialComponents.Button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="114dp"
            app:layout_constraintTop_toBottomOf="@+id/txtHabilidad"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:textColorLink="@color/design_default_color_primary_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/nombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"

            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:hint="Nombre"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/numero"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            android:hint="Numero"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/tipo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/numero"
            android:inputType="text"
            android:hint="Tipo"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtHabilidad"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tipo"
            android:hint="Habilidad"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"/>

</android.support.constraint.ConstraintLayout>